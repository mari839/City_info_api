{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "CityInfo.API.Controllers": "Information", //we can set Default Warning and some namespaces to information
      "Microsoft.AspNetCore": "Warning",
      "Miscrosoft.EntityFrameworkCore.Database.Command":  "Information" //anything in this category with level infromation or higher is logged in our console
    }
  },
  "ConnectionStrings": {
    "CityInfoDBConnectionString": "Data Source=CityInfo.db"
  },
  "Authentication": {
    "SecretForKey": "thisisthesecretforgeneratingaket(mustbeatleast32bitlong)",
    "Issuer": "https://localhost:7032",//entity that creates token
    "Audience": "cityinfoapi" //entity for whom the token is intended to be consumed
  }
}
